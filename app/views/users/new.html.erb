<h1>Sign up</h1>

<%= form_for (@user) do |f| %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.email_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.email_field :password_confirmation %>
  </div>

  <%= f.submit "Sign Up" %>

<% end %>
