<h1>Sign up</h1>

<% if @user.errors.any? %>
  <ul>

    <% @user.errors.full_messages.each do |m| %>
    <li> <%= m %> </li>
    <% end %>
    
  </ul>
<% end %>

<%= form_for (@user) do |f| %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.email_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.email_field :password_confirmation %>
  </div>

  <%= f.submit "Sign Up" %>

<% end %>
