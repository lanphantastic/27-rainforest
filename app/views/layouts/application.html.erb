<!DOCTYPE html>
<html>
  <head>
    <title>Rainforest</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
          <h1>Rainforest</h1>
            <nav class="">
              <ul>
                <li><%= link_to("Home", root_url)                  %></li>
                <li><%= link_to("All Products", products_path)     %></li>
                <li><%= link_to("Add a Product", new_product_path) %></li>
              </ul>
            </nav>
        </header>


<% if session[:user_id] %>
    <p>
      <%= link_to "Home", root_url %> |
    <%= link_to "Logout", sessions_path, method: :delete %></p>
    <p>Hello <%= @user.email %></p>
    <% else %>
      <%= link_to("New User", new_users_path)%>
      <%= link_to("Login", new_sessions_path)%>
  <% end %>

    <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:alert] %>
      <p class="alert"><%= flash[:alert] %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
