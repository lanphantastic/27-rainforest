<ul>
  <% @product.reviews.each do |review| %>
    <li>
      <p><%= review.review %></p>
      <p>Posted on: <%= review.created_at %></p>
      <p><%= link_to "Edit Review", edit_product_review_path(@product, review)%> | <%= link_to "Delete", product_review_path(@product, review), method: :delete, data: {confirm: "Are you sure you want to delete this review?" } %> </p>
    </li>
    <% end %>
</ul>
