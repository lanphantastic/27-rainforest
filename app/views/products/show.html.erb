<h1>Products#show</h1>

<h1><%= @product.name %></h1>
<p><%= link_to "Edit Product", edit_product_path(@product) %> | <%= link_to "Delete", product_path(@product), method: :delete, data: {confirm: "Are you sure you want to delete this product?" } %> </p>
<h3>Description</h3>
<p><%= @product.description %></p>
<p>Price: <%= @product.price_in_dollars %></p>
<br>

<h1>Review</h1>

<ul>
  <% @product.reviews.each do |review| %>
    <li>
      <p><%= review.review %></p>
      <p>Posted on: <%= review.created_at %></p>
      <p><%= link_to "Edit Review", edit_product_review_path(@product, review)%> | <%= link_to "Delete", product_review_path(@product, review), method: :delete, data: {confirm: "Are you sure you want to delete this review?" } %> </p>
    </li>
    <% end %>
</ul>

<h2>Product Reviews</h2>
<%= render '/reviews/reviews', review: @review %>


<h4>New Review</h4>
<%= render '/reviews/form', review: @review %>

<p><%= link_to "Back", products_path%></p>
