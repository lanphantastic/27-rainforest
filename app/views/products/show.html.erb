<h1>Products#show</h1>

<h1><%= @product.name %></h1>
<p><%= link_to "Edit Product", edit_product_path(@product) %> | <%= link_to "Delete", product_path(@product), method: :delete, data: {confirm: "Are you sure you want to delete this product?" } %> </p>
<h3>Description</h3>
<p><%= @product.description %></p>
<p>Price: <%= @product.price_in_dollars %></p>

<p><%= link_to "Back", products_path%></p>
