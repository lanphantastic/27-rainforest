<h1>Products#index</h1>

<h3><%= link_to "Add new product", new_product_path%> </h3>

<ul>
<% @products.each do |product| %>
    <h2><%= product.name%></h2>
    <h3>Description</h3>
    <p><%= product.description %></p>
    <p>Price: <%= product.price_in_cents %></p>
    <p><%= link_to "View Details", product_path(product)%> </p>
<% end %>
</ul>
