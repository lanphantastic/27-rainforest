<h1>Products#index</h1>

<p>All our products are listed here</p>

<ul>
<% @products.each do |product| %>
    <h2><%= product.name%></h2>
    <h3>Description</h3>
    <p><%= product.description %></p>
    <p>Price: <%= product.price_in_dollars %></p>
    <p><%= link_to "View Details", product_path(product)%> </p>
<% end %>
</ul>
